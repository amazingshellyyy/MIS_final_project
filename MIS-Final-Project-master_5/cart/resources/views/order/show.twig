{% extends 'templates/app.twig' %}

{% block content %}
<div id="main">
  <div class="col-md-12">
    <h3>Order #{{ order.id }} confirmed</h3>
    <hr />

    <div class="row">
      <div class="col-md-6">
        <h4>Items</h4>
        {% for product in order.products %}
            <a href="{{ path_for('product.get', { slug: product.slug }) }}">{{ product.title }}</a><br />
        {% endfor %}
      </div>
    </div>

    <hr />

    <p>
      <strong>交易時間: {{ order.created_at }}</strong><br />
      <strong>交易金額: ${{ order.total | number_format(2) }}</strong><br />
      <strong>點數餘額: </strong>
    </p>
  </div>
</div>
{% endblock %}
