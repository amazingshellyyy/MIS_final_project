{% extends 'templates/app.twig' %}

{% block content %}
<form action="{{ path_for('order.create') }}" method="post">
  <div class="concentrate" id="main">
    <div class="col-md-8" style="bottom:60px;">
      <div class="row">
        <div class="col-md-6">
          <h3>Your details</h3>
          <hr>
          <div class="form-group {% if errors.email %} has-error {% endif %}">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="form-control" value="{{ old.email }}">
            {% if errors.email %}
            <span class="help-block">
              {{ errors.email | first }}
            </span>
            {% endif %}
          </div>

          <div class="form-group {% if errors.name %} has-error {% endif %}">
            <label for="name">Full name</label>
            <input type="text" name="name" id="name" class="form-control" value="{{ old.name }}">
            {% if errors.name %}
            <span class="help-block">
              {{ errors.name | first }}
            </span>
            {% endif %}
          </div>

        </div>

        <div class="col-md-2">&nbsp</div>
        <div class="col-md-4">
          <h1 style="align:text-left;float:left;">代幣 x 1000</h1>
          <img src="/assets/images/coin1000.png" alt="1000" class="thumbnail" style="width:200px; height:200px;">
          <a href="{{ path_for('cart.buycoin') }}" class="btn btn-default" style="text-align:left;">購買其他方案</a>
        </div>


      </div>
      <h3>Payment</h3>
      <hr />
      <div id="payment"></div>
      <button type="submit" class="btn btn-default">確認付款</button>
    </div>



  </div>
</form>
{% endblock %}

{% block scripts %}
<script src="https://js.braintreegateway.com/js/braintree-2.31.0.min.js"></script>
<script>
$.ajax({
  url: '{{ path_for('braintree.token') }}',
  type: 'get',
  dataType: 'json',
}).success(function (data) {
  braintree.setup(data.token, 'dropin', {
    container: 'payment'
  });
});
</script>
{% endblock %}
